---
import Layout from "../layouts/Layout.astro";
import "../styles/product-card.css";
import ProductCardWrapper from "../components/ProductCardWrapper.astro";
---

<Layout title="Bellroy Product Showcase">
  <main class="container">
    <h1>Featured Products</h1>
    <div class="product-grid">
      <ProductCardWrapper />
      <!-- More product cards could be added here -->
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  h1 {
    font-size: 32px;
    margin-bottom: 40px;
    font-weight: 500;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 32px;
  }

  @media (min-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    }
  }
</style>